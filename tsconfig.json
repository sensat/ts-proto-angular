{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "types": ["jasmine", "node"],
    "lib": ["es2017", "dom"],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/__tests__/**/*.ts",
    "src/**/*.test.ts",
    "fixtures/**/*.ts",
    "fixtures/**/*.js"
  ]
}
